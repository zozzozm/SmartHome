<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_export_device_dev_sel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_gradient"
    tools:context=".Activity.ExportDeviceDevSel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ExportDeviceDevSel_waiting"
        android:orientation="vertical">
        <EditText
            android:id="@+id/ExportDeviceDevSel_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/user"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="selected user"
            />
        <ImageView
            android:id="@+id/connectedUserHorLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line_horizantal"
            android:layout_marginBottom="8dp"
            />
        <ListView
            android:id="@+id/ExportDeviceDevSel_LV"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="4sp"
            android:layout_gravity="start"
            android:gravity="start"
            android:foregroundGravity="left"
            android:layoutAnimation="@anim/layout_item_slide_in"
            android:divider="@android:color/transparent"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/ExportDeviceDevSel_waiting"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selection"
        android:layout_above="@+id/ExportDeviceDevSel_Dots"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/ExportDeviceDevSel_Dots"
        android:layout_above="@+id/ExportDeviceDevSel_Message"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="......................"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/ExportDeviceDevSel_Message"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select device to send\nClick on device picture to change send mode."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorRowLight"
        />
</RelativeLayout>
