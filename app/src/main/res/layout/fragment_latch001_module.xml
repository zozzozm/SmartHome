<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >


    <LinearLayout
        android:layout_centerInParent="true"
        android:rotation="90"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="270dp"
            android:layout_height="120dp"
            toggle:sb_button_color="#d6d6d6"
            toggle:sb_border_width="2dp"
            toggle:sb_checked_color="#59ef59"
            toggle:sb_background="#f05959"
            toggle:sb_uncheck_color="#f05959"
            toggle:sb_enable_effect="true"
            toggle:sb_show_indicator="false"
            toggle:sb_checkline_color="#0000FF"
            toggle:sb_effect_duration="200"
            toggle:sb_checked="false"/>
    </LinearLayout>


</RelativeLayout>