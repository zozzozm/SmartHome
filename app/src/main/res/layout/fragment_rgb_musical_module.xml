<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:id="@+id/colorLayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav1" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav2" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav3" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav4" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav5" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/shape_oval_rgb"
                        android:layout_margin="8dp"
                        android:id="@+id/picker" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginRight="32dp"
                        android:layout_marginLeft="32dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorRowLight"
                        android:textSize="22sp"
                        android:typeface="sans"
                        android:fontFamily="cursive"
                        android:entries="@array/musical"
                        android:prompt="@string/chooseMode"
                        android:id="@+id/modeSpinner"
                        android:background="@drawable/shape_radius_rect"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav10" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav9" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav8" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav7" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shape_oval_rgb_fav"
                        android:layout_margin="4dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/pickerFav6" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/whiteLayout"
                android:layout_marginTop="8dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_below="@+id/colorLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/white_light"
                    android:id="@+id/fixMsg"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignBaseline="@id/whiteCheckBox"
                    android:textColor="@color/colorRowLight"
                    android:layout_marginTop="44dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/off"
                    android:layout_toEndOf="@+id/fixMsg"
                    android:id="@+id/whiteLightValue"
                    android:layout_alignBaseline="@id/whiteCheckBox"
                    android:textColor="@color/colorRowLight"
                    android:layout_marginTop="44dp" />
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/whiteCheckBox"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/whiteLayout"
                android:visibility="visible"
                android:id="@+id/relativeLayout">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/brightness_5"
                    android:id="@+id/brightness5"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:alpha="0.5"
                    android:layout_alignBaseline="@+id/dimSeekbar"
                    android:layout_centerVertical="true" />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="2dp"
                    android:layout_toEndOf="@+id/brightness5"
                    android:id="@+id/dimSeekbar"
                    android:max="255"
                    android:layout_toStartOf="@+id/brightness7"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/brightness_7"
                    android:id="@+id/brightness7"
                    android:alpha="0.5"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_alignBaseline="@+id/dimSeekbar"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <ImageView
                android:background="@color/colorRow"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:src="@drawable/play"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/toggle_play" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>